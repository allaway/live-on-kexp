# KEXP Display Configuration
# Copy this file to .env and modify as needed

# Update interval in seconds (how often to check for new tracks)
UPDATE_INTERVAL=10

# Matrix display settings
MATRIX_ROWS=32
MATRIX_COLS=64
MATRIX_CHAIN_LENGTH=1
MATRIX_PARALLEL=1

# Brightness (0-100)
BRIGHTNESS=50

# GPIO mapping (use 'adafruit-hat' for Adafruit RGB Matrix Bonnet)
GPIO_MAPPING=adafruit-hat

# GPIO slowdown to prevent flickering
# Pi 4 typically needs 4, Pi 5 may need 2-3
# Increase if you see flickering, decrease if display is sluggish
GPIO_SLOWDOWN=4
