# KEXP Display Configuration
# Copy this file to .env and modify as needed

# Update interval in seconds (how often to check for new tracks)
UPDATE_INTERVAL=10

# Matrix display settings
MATRIX_ROWS=32
MATRIX_COLS=64
MATRIX_CHAIN_LENGTH=1
MATRIX_PARALLEL=1

# Brightness (0-100)
BRIGHTNESS=50

# GPIO mapping (use 'adafruit-hat' for Adafruit RGB Matrix Bonnet)
GPIO_MAPPING=adafruit-hat

# Font settings
FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf
SMALL_FONT_SIZE=8
MEDIUM_FONT_SIZE=10
LARGE_FONT_SIZE=12

# Scroll settings for long text
SCROLL_SPEED=0.05
SCROLL_PAUSE_DURATION=2.0
